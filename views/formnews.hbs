<h1>{{title}}</h1>
{{#if error}}
  <div class='error'>
    {{error}}
  </div>
{{/if}}
<form action="{{url}}" method="POST">
  <label for="title">Заголовок новости</label><br>
  <input type="text" id="title" name="title" required value='{{titlenews}}'><br>
  <label for="content">Содержимое новости</label><br>
  <textarea name="content" id="content" cols="50" rows="10" required>{{content}}</textarea><br>
  <input type="submit" value="{{submit}}">
</form>