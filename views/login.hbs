<h1>Авторизация:</h1>
{{#if error}}
  <div class='error'>
    {{error}}
  </div>
{{/if}}
<form action="/login" method='POST' name='login'>
  <label for="login">Логин:</label><br>
  <input type="text" name='login' id='login' required value='{{login}}'><br>
  <label for="pass">Пароль:</label><br>
  <input type="password" name='password' id='pass' required value='{{pass}}'><br>
  <input type="submit" value="Войти">
</form>